<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5F6BAC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#FFFDFC"
        android:orientation="vertical"
        tools:context=".Activity.Description">


        <TextView
            android:id="@+id/txtvenuename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="Venue Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtvenueplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:hint="Venue Address"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgdisplay"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp" />

        <TextView
            android:id="@+id/txtvenuedesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:hint="Venue Description"
            android:textSize="25sp" />


    </LinearLayout>
</android.support.v7.widget.CardView>